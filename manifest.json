{
  "manifest_version": 3,
  "name": "ClipDrop汉化插件",
  "version": "1.7",
  "description": "汉化 ClipDrop, 帮助更好的使用 ClipDrop。",
  "permissions": [
    "contextMenus",
    "tabs"
  ],
  "action": {
    "default_popup": "menu.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://clipdrop.co/*"
      ],
      "js": [
        "js/content_script.js"
      ]
    }
  ],
  "icons": {
    "48": "img/icons_48.png",
    "128": "img/icons_128.png",
    "256": "img/icons_256.png",
    "512": "img/icons_512.png"
  }
}